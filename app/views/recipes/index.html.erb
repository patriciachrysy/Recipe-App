<%= stylesheet_link_tag "recipes" %>

<ul class='recipe-list'>
  <% @recipes.each do |recipe| %>
    <li class='card'>
      <div class='recipe-photo'>
        <img src='<%= recipe.photo %>' alt='<%= recipe.name %>' class='recipe-photo' />
      </div>
      <div class='recipe-info'>
        <div class='recipe-n'>
          <%= link_to "#{recipe.name}", recipe_path(recipe), class: 'recipe-name' %>
          <%= link_to 'Remove', recipe_path(recipe), method: :delete, data: { confirm: 'Are you sure?' }, class: 'remove' %>
        </div>
        <div>
          <p class='recipe-decision'><%= recipe.description %></p>
        </div>
      </div>
    </li>
  <% end %>
</ul>
