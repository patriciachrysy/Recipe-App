<%= stylesheet_link_tag "devise" %>

<h2 class='header'>Log in</h2>

<div class='table'>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'label-1' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'field-1' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'label-1' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'field-1' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn' %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
