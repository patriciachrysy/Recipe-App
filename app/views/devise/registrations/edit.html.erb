<%= stylesheet_link_tag "devise" %>

<h2 class='header'>Edit <%= resource_name.to_s.humanize %></h2>

<div class='table'>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, class: 'label-1' %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'field-1' %>
    </div>

    <div class="field">
      <%= f.label :photo, class: 'label-1' %><br />
      <%= f.file_field :photo, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :email, class: 'label-1' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'field-1' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, class: 'label-1' %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'field-1' %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'label-1' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'field-1' %>
    </div>

    <div class="field">
      <%= f.label :current_password, class: 'label-1' %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'field-1' %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: 'btn' %>
    </div>
  <% end %>
</div>

<div class='cancelation'>
  <h3>Cancel my account</h3>

  <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'btn-2' %></div>

  <%= link_to "Back", :back, class: 'btn-2' %>
</div>
